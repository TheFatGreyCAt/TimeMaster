<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F8FA">

    <!-- TabBar -->
    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:elevation="3dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu" />
        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textSize="20sp"
            android:textColor="#232323"
            android:textStyle="bold"
            android:gravity="center" />
        <ImageView
            android:id="@+id/btn_bell"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_notification"
            android:contentDescription="Notification" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" >

            <!-- Card Admin -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:src="@drawable/ic_faceid"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:background="@drawable/bg_avatar"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_marginStart="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Admin"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#232323"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Chào mừng trở lại"
                            android:textColor="#888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Thống kê của bạn"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <!-- Điều hướng tuần -->
            <LinearLayout
                android:id="@+id/week_navigator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageButton
                    android:id="@+id/btn_prev_week"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tuần trước"/>

                <TextView
                    android:id="@+id/tv_week_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="28/10/2024 - 03/11/2024"
                    android:textSize="16sp"
                    android:textColor="#232323"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_next_week"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tuần sau"/>
            </LinearLayout>

            <!-- Biểu đồ tuần -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="18dp"
                tools:ignore="MissingClass" />

            <!-- 3 Box tổng -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="15dp"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/card_present"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_status_green"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">
                    <TextView
                        android:text="Hiện diện"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#298C41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_present_count"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card_late"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_status_orange"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">
                    <TextView
                        android:text="Đi trễ"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#D29108"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_late_count"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card_absent"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_status_red"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:text="Vắng mặt"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#EE2323"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_absent_count"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Hàng tiêu đề + chọn ngày -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Hoạt động hôm nay"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#232323"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:id="@+id/layout_pick_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_avatar"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/tv_selected_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23/10/2023"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/img_calendar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Chọn ngày"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Ô tìm kiếm nhân viên -->
            <EditText
                android:id="@+id/ed_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Tìm theo tên nhân viên"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/bg_avatar"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_marginTop="10dp"/>

            <!-- Header bảng -->
            <com.example.timemaster.ui.widget.SyncedHorizontalScrollView
                android:id="@+id/header_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/header_h"
                    android:orientation="horizontal"
                    android:background="#F6F6F6"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- CỘT 1: Nhân viên -->
                    <TextView
                        android:text="Nhân viên"
                        android:gravity="center_vertical"
                        android:layout_width="@dimen/col_name_w"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/col_gap"/>

                    <!-- CỘT 2: Giờ vào -->
                    <TextView
                        android:text="Giờ vào"
                        android:gravity="center"
                        android:layout_width="@dimen/col_in_w"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/col_gap"/>

                    <!-- CỘT 3: Giờ ra -->
                    <TextView
                        android:text="Giờ ra"
                        android:gravity="center"
                        android:layout_width="@dimen/col_out_w"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="16sp"
                        android:layout_marginEnd="@dimen/col_gap"/>

                    <!-- CỘT 4: Trạng thái -->
                    <TextView
                        android:text="Trạng thái"
                        android:gravity="center"
                        android:layout_width="@dimen/col_status_w"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.example.timemaster.ui.widget.SyncedHorizontalScrollView>


            <!-- Danh sách dòng (cuộn ngang đồng bộ) -->
            <com.example.timemaster.ui.widget.SyncedHorizontalScrollView
                android:id="@+id/list_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/ll_user_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </com.example.timemaster.ui.widget.SyncedHorizontalScrollView>

            <!-- Phân trang -->
            <LinearLayout
                android:id="@+id/pagination_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/btn_prev_page"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent"
                    android:layout_width="42dp"
                    android:layout_height="42dp"/>
                <TextView
                    android:id="@+id/tv_page_indicator"
                    android:text="1/3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/btn_next_page"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:layout_width="42dp"
                    android:layout_height="42dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
