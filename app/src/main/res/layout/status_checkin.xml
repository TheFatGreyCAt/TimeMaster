<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCF9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_blue_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_user"
                    android:contentDescription="Avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#2563EB" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Thứ Sáu, 26/07/2024"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
                    app:layout_constraintEnd_toStartOf="@id/ivNotification"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ivAvatar" />

                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="Notification"
                    app:layout_constraintBottom_toBottomOf="@id/tvDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvDate"
                    app:tint="#1F2937" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Chào buổi sáng,"
                android:textColor="#111827"
                android:textSize="26sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLayout" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Username]!"
                android:textColor="#111827"
                android:textSize="26sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

            <!-- Check-in status card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@id/tvUsername">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Check-in Status -->
                    <TextView
                        android:id="@+id/tvStatusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái check-in"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Đúng giờ"
                        android:textColor="#059669"
                        android:textSize="22sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvStatusLabel" />

                    <ImageView
                        android:id="@+id/ivCheckmark"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/circle_green_light_bg"
                        android:padding="7dp"
                        android:src="@drawable/ic_check"
                        android:contentDescription="StatusCheckMark"
                        app:layout_constraintBottom_toBottomOf="@id/tvStatus"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvStatusLabel"
                        app:tint="#059669" />

                    <!-- Divider line -->
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#E5E7EB"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus" />

                    <!-- Check-in Time -->
                    <TextView
                        android:id="@+id/tvCheckInLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Check-in"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1" />

                    <TextView
                        android:id="@+id/tvCheckInTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="08:30"
                        android:textColor="#111827"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCheckInLabel" />

                    <!-- Check-out Time -->
                    <TextView
                        android:id="@+id/tvCheckOutLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Check-out"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintTop_toBottomOf="@id/divider1" />

                    <TextView
                        android:id="@+id/tvCheckOutTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="--:--"
                        android:textColor="#9CA3AF"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintTop_toBottomOf="@id/tvCheckOutLabel" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <!-- Divider line 2 -->
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#E5E7EB"
                        app:layout_constraintTop_toBottomOf="@id/tvCheckInTime" />

                    <!-- Total hours -->
                    <TextView
                        android:id="@+id/tvTotalHoursLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Tổng giờ làm"
                        android:textColor="#374151"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2" />

                    <TextView
                        android:id="@+id/tvTotalHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 giờ 30 phút"
                        android:textColor="#2563EB"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintBottom_toBottomOf="@id/tvTotalHoursLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvTotalHoursLabel" />

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="14dp"
                        android:max="100"
                        android:progress="56"
                        android:progressDrawable="@drawable/progress_bar_rounded"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalHoursLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Check-out Section -->
            <TextView
                android:id="@+id/tvCheckoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Check-out"
                android:textColor="#111827"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardStatus" />

            <!-- Method Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@id/tvCheckoutTitle">

                <!-- Buttons Grid -->
                <LinearLayout
                    android:id="@+id/checkoutButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Fingerprint Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#F9FAFB"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="18dp"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/btnFinger"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:src="@drawable/ic_fingerprint"
                                android:contentDescription="FingerPrintID"
                                app:tint="#1F2937" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Vân tay"
                                android:textColor="#1F2937"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Face Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#F9FAFB"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="18dp"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/btnFace"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:src="@drawable/ic_faceid"
                                android:contentDescription="FaceID"
                                app:tint="#1F2937" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Khuôn mặt"
                                android:textColor="#1F2937"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom spacing / can be remove after add the menu bar-->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardCheckout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>

</RelativeLayout>