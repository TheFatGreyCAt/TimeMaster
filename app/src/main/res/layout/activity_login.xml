<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:clipToPadding="false"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Nút mũi tên back về trang chào mừng -->
        <ImageButton
            android:id="@+id/btn_back_welcome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left_arrow"
            android:contentDescription="@string/cd_back_to_welcome"
            app:tint="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            />


        <!-- LOGO VÀ ICON -->
        <View
            android:id="@+id/icon_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_circle_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            />

        <ImageView
            android:id="@+id/iv_fingerprint"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_fingerprint"
            app:layout_constraintBottom_toBottomOf="@id/icon_background"
            app:layout_constraintEnd_toEndOf="@id/icon_background"
            app:layout_constraintStart_toStartOf="@id/icon_background"
            app:layout_constraintTop_toTopOf="@id/icon_background"
            app:tint="@color/primary_blue"
            android:contentDescription="@string/cd_fingerprint_icon"
            />

        <!-- TIÊU ĐỀ -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_welcome_message"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_background"
            />

        <TextView
            android:id="@+id/textViewSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_welcome_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

        <!-- LAYOUT ĐĂNG NHẬP VÀ ĐĂNG KÝ -->
        <LinearLayout
            android:id="@+id/tab_layout_Log"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_tab_layout"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSubTitle"
            >

            <TextView
                android:id="@+id/tab_login_Login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/action_login"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tab_selected"
                />

            <TextView
                android:id="@+id/tab_register_Login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/action_register"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                />
        </LinearLayout>

        <!-- EMAIL INPUT -->
        <TextView
            android:id="@+id/textView_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_username_or_email"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_Log" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_username_or_email"
            app:boxStrokeColor="@color/primary_blue"
            app:hintTextColor="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_email_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PASSWORD INPUT -->
        <TextView
            android:id="@+id/textView_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_password"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_password"
            app:boxStrokeColor="@color/primary_blue"
            app:hintTextColor="@color/text_secondary"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_password_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- FORGOT PASSWORD -->
        <TextView
            android:id="@+id/textView_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_forgot_password"
            android:textSize="14sp"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_password" />

        <!-- LOGIN BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/action_login"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary_blue"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_forgot_password" />


        <!-- DIVIDER HOẶC ĐĂNG NHẬP VỚI -->
        <View
            android:id="@+id/divider_left"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@id/textView_hoac"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_login"
            app:layout_constraintBottom_toBottomOf="@id/textView_hoac" />

        <TextView
            android:id="@+id/textView_hoac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_with_social_media_prompt"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_login" />

        <View
            android:id="@+id/divider_right"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/textView_hoac"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_hoac"
            app:layout_constraintBottom_toBottomOf="@id/textView_hoac" />

        <!-- CHỌN ICON ĐĂNG NHẬP -->
        <LinearLayout
            android:id="@+id/choice_ic_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_hoac">

            <!-- Fingerprint -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_fingerprint"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_fingerprint"
                    android:layout_gravity="center"
                    app:tint="@color/text_primary"
                    android:contentDescription="@string/cd_fingerprint_button" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Face Recognition -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_face"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_faceid"
                    android:layout_gravity="center"
                    app:tint="@color/text_primary"
                    android:contentDescription="@string/cd_face_recognition_button" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút đăng nhập Google -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_google_login"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_google"
                    android:layout_gravity="center" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
