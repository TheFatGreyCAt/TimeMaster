<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA">

    <!-- TabBar đầu trang -->
    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:elevation="3dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"/>
        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textSize="20sp"
            android:textColor="#232323"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/btn_bell"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_notification"
            android:contentDescription="Notification"/>
    </LinearLayout>

    <!-- Nội dung cuộn toàn trang -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- CardView: User info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="14dp"
                app:cardBackgroundColor="#FFF">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:src="@drawable/ic_faceid"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:background="@drawable/bg_avatar"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_marginStart="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Nguyen Van A"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#232323"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="nguyenvana"
                            android:textColor="#888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thống kê -->
            <TextView
                android:text="Thống kê của bạn"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:id="@+id/week_navigator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageButton
                    android:id="@+id/btn_prev_week"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tuần trước"/>

                <TextView
                    android:id="@+id/tv_week_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="28/10/2024 - 03/11/2024"
                    android:textSize="16sp"
                    android:textColor="#232323"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_next_week"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tuần sau"/>
            </LinearLayout>

            <!-- Biểu đồ -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                tools:ignore="MissingClass" />


            <TextView
                android:text="Lịch sử Check-in"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#232323"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <!-- Hiển thị các dòng check-in -->
            <LinearLayout
                android:id="@+id/ll_checkin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
