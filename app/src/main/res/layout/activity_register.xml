<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:clipToPadding="false"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Nút mũi tên back về trang chào mừng -->
        <ImageButton
            android:id="@+id/btn_back_welcome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left_arrow"
            android:contentDescription="@string/cd_back_to_welcome"
            app:tint="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            />


        <!-- LOGO VÀ ICON -->
        <View
            android:id="@+id/icon_background_regis"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_circle_icon"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/ic_face_reg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_faceid"
            app:tint="@color/primary_blue"
            app:layout_constraintTop_toTopOf="@id/icon_background_regis"
            app:layout_constraintBottom_toBottomOf="@id/icon_background_regis"
            app:layout_constraintStart_toStartOf="@id/icon_background_regis"
            app:layout_constraintEnd_toEndOf="@id/icon_background_regis"
            />

        <!-- TIÊU ĐỀ -->
        <TextView
            android:id="@+id/textViewTitleRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản mới"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/icon_background_regis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textViewSubTitleRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin bên dưới để đăng ký."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTitleRegis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- TAB LAYOUT ĐĂNG NHẬP, ĐĂNG KÝ -->
        <LinearLayout
            android:id="@+id/tab_layout_regis"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_tab_layout"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSubTitleRegis" >

            <TextView
                android:id="@+id/tab_login_regis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Đăng nhập"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tab_register_regis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Đăng ký"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="@drawable/bg_tab_selected"
                android:clickable="true"
                android:focusable="true"
                />
        </LinearLayout>

        <!-- EMAIL -->
        <TextView
            android:id="@+id/textView_email_label_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_regis"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_email_regis"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nhập email của bạn"
            app:boxStrokeColor="@color/primary_blue"
            app:hintTextColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/textView_email_label_regis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_email_regis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- MẬT KHẨU -->
        <TextView
            android:id="@+id/textView_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_email_regis" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_password_regis"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nhập mật khẩu"
            app:boxStrokeColor="@color/primary_blue"
            app:hintTextColor="@color/text_secondary"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_password_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_password_regis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ĐỘ MẠNH MẬT KHẨU -->
        <TextView
            android:id="@+id/textView_strength_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Độ mạnh mật khẩu:"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/title_password_regis"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView_strength_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung bình"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/warning_orange"
            app:layout_constraintTop_toTopOf="@id/textView_strength_label"
            app:layout_constraintBottom_toBottomOf="@id/textView_strength_label"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/tab_strength"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="6dp"
            android:progress="50"
            android:max="100"
            android:progressTint="@color/warning_orange"
            android:backgroundTint="@color/divider_color"
            app:layout_constraintTop_toBottomOf="@id/textView_strength_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- XÁC NHẬN LẠI MẬT KHẨU-->
        <TextView
            android:id="@+id/textView_confirm_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận Mật khẩu"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tab_strength"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_confirm_password_regis"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Xác nhận mật khẩu của bạn"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/primary_blue"
            app:hintTextColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/textView_confirm_password_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_confirm_password_regis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- NÚT ĐĂNG KÝ -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_register"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:cornerRadius="28dp"
            android:backgroundTint="@color/primary_blue"
            app:layout_constraintTop_toBottomOf="@id/title_confirm_password_regis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- DIVIDER HOẶC -->
        <View
            android:id="@+id/divider_left"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@id/textView_hoac"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_register"
            app:layout_constraintBottom_toBottomOf="@id/textView_hoac" />

        <TextView
            android:id="@+id/textView_hoac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng ký với"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_register" />

        <View
            android:id="@+id/divider_right"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/textView_hoac"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_hoac"
            app:layout_constraintBottom_toBottomOf="@id/textView_hoac" />

        <!-- ICON GOOGLE -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_google_signup"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Đăng ký với Google"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textAllCaps="false"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null"
            app:cornerRadius="28dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_hoac" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>