<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tiêu đề phụ & mô tả -->
            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_heading"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tv_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_sub"
                android:textAlignment="center"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="20dp" />

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email_forgot"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:startIconDrawable="@drawable/ic_email"
                app:hintEnabled="true"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:helperTextEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:importantForAutofill="yes"
                    android:singleLine="true"
                    android:imeOptions="actionSend" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nút gửi -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/forgot_send_btn"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/primary_blue_light"
                />

            <!-- Gợi ý -->
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/forgot_tip"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:lineSpacingExtra="1dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.google.android.material.appbar.CollapsingToolbarLayout>
